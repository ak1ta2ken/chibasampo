<ul>
  <% comments.each do |comment| %>
    <% if comment.id.present? %>
      <li>
        <p><%= comment.created_at %></p>
        <p><%= comment.user.name %>さん: <%= comment.content %>
          <% if user_signed_in? && comment.user_id == current_user.id %>
            <%= link_to '編集', edit_stroll_comment_path(comment.stroll, comment), remote:true %>
            <%= link_to '削除', [comment.stroll, comment], method: :delete, data: { confirm: '本当に削除していいですか？' }, remote: true %>
          <% end %></p>
      </li>
    <% end %>
  <% end %>
</ul>

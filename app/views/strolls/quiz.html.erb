function run(){
  for (var i = qa.length-1; i>=0; i--){
    var rand = Math.floor(Math.random() * (i+1));
    var temp = qa[i];
    qa[i] = qa[rand];
    qa[rand] = temp;
    document.getElementById("001").innnerHTML = i + "回目= " + qa;
    quiz(qa);
  }
}

q_sel = 5;
// q_max = 15;
setReady(qa);

function setReady() {
  count = 0;

  document.getElementById("text_a").innerHTML = "";

  answers = new Array();
  run();
  quiz();
}

function start_quiz() {
  var area1 = document.getElementById("question_area_1");
  var area2 = document.getElementById("question_area_2");

  area1.style.display = "none";
  area2.style.display = "block";
}

function quiz() {
  var s, n;
  // rnd = Math.floor(Math.random() * qa.length);
  document.getElementById("text_q").innerHTML = "第" + (count + 1) + "問　" + qa[count][0];
  s = "";
  for (n=1;n<=q_sel;n++) {
    s += "<a href='javascript:answer(" + n + ")'>" + qa[count][n] + "</a>　";
  }
  document.getElementById("text_s").innerHTML = s;
}

function answer(num) {
  var s;
  var ans;
  s = "第" + (count + 1) + "問　";
  if (num == qa[count][q_sel + 1]) {
    answers[count] = "⭕️ ";
  } else {
    answers[count] = "❌ ";
  }
  s += answers[count] + qa[count][num];
  document.getElementById("text_a").innerHTML = s;
  ans = s;
  count++;
  if (count < 10) {
    quiz();
  } else {
    s = "<table border='1.0' align='center'><p align='center'>解答ありがとうございました。</p>";
    s += "<tr align='center'><th align='center'>&ensp;問題&ensp;</th>";
    for (n=0;n<10;n++) {
      s += "<th align='center'>" + (n+1) + "</th>";
    }
    s += "</tr>";
    s += "<tr align='center'><th align='center'>&ensp;解答&ensp;</th>";
    for (n=0;n<10;n++) {
      s += "<td align='center'>" + answers[n] + "</td>";
    }
    s += "</tr>";
    s += "</table>";
    document.getElementById("text_q").innerHTML = s;
    document.getElementById("text_s").innerHTML = ans;
    //s = "<a href='javascript:setReady()'><p align='center'>はじめから</p></a>";
    s = "<input type=\"button\"class=\"btn\"style=\"color: #3d3d3d; background-color: #fff; border-color: #cccccc;\"value=\"はじめから\" onclick=\"setReady();\"></input>";
    document.getElementById("text_a").innerHTML = s;
  }
}

<!DOCTYPE html>
<html>
  <head>
    <title>chibasampo</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <body>
    <header>
      <nav class="navbar navbar-expand-lg navbar-light bg-light">
        <a class="navbar-brand" href="/" style="font-size:2rem">ChibaSampo<span class="sr-only">(current)</span></a>
        <a class="navbar-brand" href="/strolls" style="font-size:2rem">Strolls<span class="sr-only">(current)</span></a>
        <a class="navbar-brand" href="/strolls/ganbarou" style="font-size:2rem">Ganbarou<span class="sr-only">(current)</span></a>
        <a class="navbar-brand" href="/strolls/people" style="font-size:2rem">People<span class="sr-only">(current)</span></a>
        <a class="navbar-brand" href="/strolls/quiz" style="font-size:2rem">Quiz<span class="sr-only">(current)</span></a>
        <ul class="navbar-right">
          <li class="navbar-brand" style="font-size:2rem">
            <% if user_signed_in? %>
              <%= link_to "Profile", users_show_path %>&emsp;&emsp;
              <%= link_to "Logout", destroy_user_session_path, method: :delete %>&emsp;
            <% else %>
              <%= link_to "Signup", new_user_registration_path %>&emsp;&emsp;
              <%= link_to "Login", new_user_session_path %>&emsp;
            <% end %>
          </li>
        </ul>
      </nav>
    </header>
    <%= yield %>
  </body>
</html>

<h1><%= @user.name %>さんのページ</h1>
<p><%= notice %></p>
<br>
<% if @user[:profile_image] == nil %>
  <%= image_tag"IMG_0191.jpg", width:"20%" %>
<% else %>
  <%= image_tag @user.profile_image.url if @user.profile_image && @user.profile_image.url%>
<% end %>
<p></p>
<br>
<p>お名前: <%= @user.name %></p>
<p>メールアドレス: <%= @user.email %></p>
<p>プロフィール: <%= @user.profile %></p>
<p>ラベル: <% @user.labels.each do |label| %>
  <%= label.label_name %>
<% end %></p>

<%= link_to 'プロフィール編集', edit_user_registration_path(@user) %>
<%= link_to 'お気に入り一覧', favorites_user_path(@user.id) %>
<%= link_to '散歩一覧', strolls_path %>
